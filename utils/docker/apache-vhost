<VirtualHost *:80>
        DocumentRoot /usr/local/share/zoneminder/www
        DirectoryIndex index.php

        ScriptAlias /cgi-bin/ /usr/lib/cgi-bin/
        <Directory />
                Require all granted
        </Directory>
        <Directory "/usr/lib/cgi-bin">
                AllowOverride None
                Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
                Require all granted
        </Directory>
</VirtualHost>
